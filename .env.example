# Locize Configuration
# Copy this file to .env and fill in your values

# Project ID from Locize dashboard
LOCIZE_PROJECT_ID=your-project-id

# Read-only API key (safe for automated workflows)
LOCIZE_READ_KEY=your-read-only-api-key

# Write API key (use only for manual uploads)
# NEVER use this in automated workflows
LOCIZE_WRITE_KEY=your-write-api-key

# Optional: Default language settings
DEFAULT_REFERENCE_LANGUAGE=en
DEFAULT_TARGET_LANGUAGES=it,de,es

# Optional: Confidence thresholds
AI_CONFIDENCE_THRESHOLD=0.7
AI_HIGH_CONFIDENCE=0.9

# Safety settings (don't change unless you know what you're doing)
REQUIRE_CONFIRMATION=true
ENABLE_DRY_RUN=true
BACKUP_BEFORE_UPLOAD=true